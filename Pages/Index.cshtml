@page
@model SproutFTP.Pages.IndexModel
@{
    ViewData["Title"] = "Sprout FTP";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">🌱 Sprout FTP Manager</h1>

    <!-- แสดง Error ถ้ามี -->
    <div asp-validation-summary="All" class="alert alert-danger" style="@(ViewData.ModelState.IsValid ? "display:none" : "")"></div>

    <!-- ฟอร์มอัปโหลด -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">Upload File</div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" asp-page-handler="Upload" class="d-flex gap-2">
                <input type="file" class="form-control" asp-for="UploadedFile" required />
                <button class="btn btn-success" type="submit">Upload</button>
            </form>
        </div>
    </div>

    <!-- ตารางรายการไฟล์ -->
    <div class="card">
        <div class="card-header bg-dark text-white">Files on Server</div>
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>Filename</th>
                        <th>Size (Bytes)</th>
                        <th>Modified</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.FileList.Count == 0)
                    {
                        <tr><td colspan="4" class="text-center text-muted p-3">No files found.</td></tr>
                    }
                    else
                    {
                        @foreach (var item in Model.FileList)
                        {
                            // เช็คว่าเป็นไฟล์จริงๆ
                            if (item.Type == FluentFTP.FtpObjectType.File)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Size</td>
                                    <td>@item.Modified</td>
                                    <td class="text-center">
                                        <a asp-page-handler="Download" asp-route-fileName="@item.Name" class="btn btn-sm btn-info text-white">Download</a>

                                        <form method="post" asp-page-handler="Delete" asp-route-fileName="@item.Name" style="display:inline" onsubmit="return confirm('Confirm delete?');">
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>